# =============================================================================
# Hyperion Smart Contracts - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# Network Configuration
# ---------------------
# Cardano network: mainnet, preprod, preview
CARDANO_NETWORK=preprod

# Blockfrost API Configuration
# ----------------------------
BLOCKFROST_API_KEY=your_blockfrost_project_id
BLOCKFROST_URL=https://cardano-preprod.blockfrost.io/api

# Wallet Configuration (for deployment)
# -------------------------------------
# Path to signing key (NEVER commit actual keys!)
PAYMENT_SKEY_PATH=./keys/payment.skey
PAYMENT_ADDR_PATH=./keys/payment.addr

# Contract Parameters
# -------------------
# Oracle public key hash (for data verification)
ORACLE_PKH=your_oracle_public_key_hash

# Protocol Parameters
# -------------------
# Minimum policy amount in Lovelace (1 ADA = 1,000,000 Lovelace)
MIN_POLICY_AMOUNT=5000000
# Maximum policy amount in Lovelace
MAX_POLICY_AMOUNT=1000000000
# Protocol fee percentage (basis points, 100 = 1%)
PROTOCOL_FEE_BPS=250
