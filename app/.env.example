# =============================================================================
# Hyperion Frontend - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values

# API Configuration
# -----------------
# URL of the FastAPI backend service
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# Phase 7: Forensic Reporting Backend
BACKEND_URL=http://localhost:8000

# Cardano Network Configuration
# -----------------------------
# Network to connect to: mainnet, preprod, preview
NEXT_PUBLIC_CARDANO_NETWORK=preprod

# Blockfrost API (for blockchain queries)
# Get your API key from: https://blockfrost.io/
# For preprod testnet: preprodbcpV680ZAfVbVXQn2fvz5kLeJJQOOhK9
NEXT_PUBLIC_BLOCKFROST_API_KEY=your_blockfrost_project_id
NEXT_PUBLIC_BLOCKFROST_KEY=preprodbcpV680ZAfVbVXQn2fvz5kLeJJQOOhK9

# Smart Contract Addresses (Updated after deployment - Phase 2)
# --------------------------------------------------------------
NEXT_PUBLIC_TREASURY_ADDRESS=addr_test1...
NEXT_PUBLIC_POLICY_ID_HURRICANE=1234abcd...
NEXT_PUBLIC_POLICY_ID_FLIGHT=5678efgh...
NEXT_PUBLIC_POLICY_ID_CROP=9012ijkl...

# Phase 3 Oracle Configuration
# ----------------------------
NEXT_PUBLIC_ENABLE_PHASE3_ORACLE=true
NEXT_PUBLIC_ORACLE_UTXO_REF=txhash#0
NEXT_PUBLIC_ORACLE_POLL_INTERVAL=30

# Phase 5 Wallet Configuration
# ----------------------------
# Lucid/CIP-30 wallet integration
NEXT_PUBLIC_BLOCKFROST_API_KEY=your_blockfrost_project_id
NEXT_PUBLIC_CARDANO_NETWORK=Preprod

# Wallet Configuration
# --------------------
# Supported wallets: nami, eternl, flint, typhon, gerowallet
NEXT_PUBLIC_DEFAULT_WALLET=nami

# Feature Flags
# -------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_TESTNET_FAUCET=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true
